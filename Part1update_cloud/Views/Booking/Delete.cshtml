@model Part1update_cloud.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>

@if (Model != null)
{
    <div>
        <h4>Booking ID: @Model.BookingId</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Booking Date</dt>
            <dd class="col-sm-10">@Model.BookingDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-2">Event ID</dt>
            <dd class="col-sm-10">@Model.EventId</dd>

            <dt class="col-sm-2">Venue ID</dt>
            <dd class="col-sm-10">@Model.VenueId</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="BookingId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}
else
{
    <p class="text-danger">Booking not found.</p>
}
