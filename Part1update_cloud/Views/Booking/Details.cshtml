@model Part1update_cloud.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Event ID</dt>
        <dd class="col-sm-10">@Model.EventId</dd>

        <dt class="col-sm-2">Venue ID</dt>
        <dd class="col-sm-10">@Model.VenueId</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
