@model Part1update_cloud.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>Delete Venue</h2>

<h3>Are you sure you want to delete this venue?</h3>

@if (Model != null)
{
    <div>
        <h4>@Model.VenueName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@Model.Location</dd>

            <dt class="col-sm-2">Capacity</dt>
            <dd class="col-sm-10">@Model.Capacity</dd>

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="Image" style="max-width:200px;" />
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="VenueId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}
else
{
    <p class="text-danger">Venue not found.</p>
}